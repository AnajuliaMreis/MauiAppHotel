<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#4B0082">
    <!-- Roxo claro -->

    <VerticalStackLayout VerticalOptions="CenterAndExpand" Spacing="20" Padding="20">

        <!-- Nome do quarto -->
        <Label Text="{Binding QuartoSelecionado.Descricao}"
               TextColor="White"
               FontFamily="Kalam"
               FontSize="40"
               HorizontalTextAlignment="Center"/>

        <!-- Adultos e Crianças -->
        <Frame Margin="10"
               CornerRadius="15"
               BackgroundColor="White"
               BorderColor="#9370DB"
               HasShadow="True">
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="20">
                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="Adultos: " FontAttributes="Bold" TextColor="#9370DB"/>
                    <Label Text="{Binding QntAdultos}" TextColor="#9370DB"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
                    <Label Text="Crianças: " FontAttributes="Bold" TextColor="#9370DB"/>
                    <Label Text="{Binding QntCriancas}" TextColor="#9370DB"/>
                </HorizontalStackLayout>
            </StackLayout>
        </Frame>

        <!-- Datas e Estadia -->
        <Frame Margin="10"
               CornerRadius="15"
               BackgroundColor="White"
               BorderColor="#9370DB"
               HasShadow="True"
               Padding="15">
            <Grid ColumnDefinitions="*, *, *" RowDefinitions="Auto, Auto" ColumnSpacing="10">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:" FontAttributes="Bold" TextColor="#9370DB"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:" FontAttributes="Bold" TextColor="#9370DB"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:" FontAttributes="Bold" TextColor="#9370DB"/>

                <Label Grid.Row="1" Grid.Column="0" 
                       Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}"
                       TextColor="#9370DB" />

                <Label Grid.Row="1" Grid.Column="1" 
                       Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}"
                       TextColor="#9370DB" />

                <Label Grid.Row="1" Grid.Column="2" 
                       Text="{Binding Estadia}"
                       TextColor="#9370DB"/>
            </Grid>
        </Frame>

        <!-- Valor total -->
        <Frame Margin="10"
               CornerRadius="15"
               BackgroundColor="White"
               BorderColor="#9370DB"
               HasShadow="True"
               Padding="15">
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="10">
                <Label Text="Valor Total: " FontAttributes="Bold" TextColor="#9370DB"/>
                <Label Text="{Binding ValorTotal, StringFormat='{}{0:c}'}" TextColor="#9370DB"/>
            </HorizontalStackLayout>
        </Frame>

        <!-- Botão -->
        <Button Text="Voltar"
                HorizontalOptions="Center"
                BackgroundColor="#9370DB"
                TextColor="White"
                CornerRadius="10"
                Padding="10,5"
                Clicked="Button_Clicked" />

    </VerticalStackLayout>
</ContentPage>